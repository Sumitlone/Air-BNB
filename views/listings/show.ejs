<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-6 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card listing-card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image">
            <div class="card-body">
                <p class="card-text">Owned by<i> <%= listing.owner.username %> </i> </p>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text"> &#x20B9; <%= listing.price.toLocaleString("en-IN") %> for 1 night </p>
                <p class="card-text">
                    <%= listing.location %>
                </p>
                <p class="card-text">
                    <%= listing.country %>
                </p>
            </div>
        </div>
        <div class="btns col-6 offset-3 show-card">
            <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <form method="get" action="/listing/<%= listing._id %>/edit">
                <button class="btn btn-dark edit-btn">Edit</button>
            </form><br>
            <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-outline-dark">Delete</button>
            </form>
            <% } %>
        </div>
        <div class="col-6 offset-3">
            <hr>
            <% if (currUser) { %>
            <h4>Leave Review</h4>
            <form action="/listing/<%= listing._id %>/review" method="post" class="mb-4 needs-validation" novalidate>
                <div class="mt-3 mb-3">
                    <label for="rating" class="form-label">Rating:</label>
                    <input type="range" min="1" max="5" name="review[rating]" class="form-range">
                </div>
                <div class="mt-3 mb-3">
                    <label for="comment" class="form-label">Comments:</label><br>
                    <textarea name="review[comment]" id="comment" rows="8" cols="40" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <% } %>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username %></h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                            <form method="post"
                                action="/listing/<%= listing.id %>/review/<%= review.id %>?_method=DELETE">
                                <button class="btn btn-sm btn-outline-dark mb-3">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>