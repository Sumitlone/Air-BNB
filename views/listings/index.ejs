<% layout("/layouts/boilerplate") %>
        <h3 class="mb-3">All Listings</h3>
        <!-- <form method="get" action="/listing/new">
            <button type="submit">Add New Listing</button>
        </form> -->
        <div class="row row-cols-lg-6 row-cols-md-4 row-cols-sm-3 row-cols-2 g-3">
            <% for (let listing of allListings) { %>
                <div class="col">
                    <a href="/listing/<%= listing._id %>" class="text-decoration-none">
                        <div class="card listing-card">
                            <img src="<%= listing.image.url %>" class="card-img-top index-img" alt="listing image">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-title fw-semibold">
                                    <%= listing.title %>
                                </p>
                                <p class="card-subtitle text-body-secondary">&#x20B9;
                                    <%= listing.price.toLocaleString("en-IN")%> for 1 night
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>